<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:id="@+id/btn_my_account_log_out"
            style="@style/btn_my_account_log_out"
            app:layout_constraintTop_toBottomOf="@+id/btn_my_account_change_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp" android:layout_marginStart="24dp" android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp" android:layout_marginEnd="24dp" android:layout_width="0dp"/>
    <Button
            android:id="@+id/btn_my_account_change_password"
            style="@style/btn_my_account_change_password"
            app:layout_constraintTop_toBottomOf="@+id/txt_my_account_email_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/txt_my_account_user_name"
            android:textColor="@color/colorPrimaryDark"
            style="@style/txt_my_account_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/txt_my_account_email_address"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            style="@style/txt_my_account_email_address"
            app:layout_constraintTop_toBottomOf="@+id/txt_my_account_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.69"/>
    <TextView
            style="@style/txt_my_account_email_address"
            android:text="@string/email_address"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/txt_my_account_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_my_account_email_address"
            app:layout_constraintHorizontal_bias="0.737"/>
</androidx.constraintlayout.widget.ConstraintLayout>